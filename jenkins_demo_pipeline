pipeline {
    agent any
    stages{
        stage('fetch-code'){
            steps {
                git branch: 'main', url: 'https://github.com/pratikshachougule/login-data.git'
            }
        }
        stage('build-image'){
            steps{
                sh 'docker build -t ditiss:v1 .'
            }
        }
        stage('deploy-image'){
            steps{
                sh 'docker run --name ditiss -p 9200:80 -d ditiss:v1'
            }
        }
    }
}
